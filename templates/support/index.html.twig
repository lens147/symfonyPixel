{% extends 'base.html.twig' %}

{% block title %}Support index{% endblock %}

{% block body %}
    <h1>Support index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date_de_sortie</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for support in supports %}
            <tr>
                <td>{{ support.id }}</td>
                <td>{{ support.nom }}</td>
                <td>{{ support.dateDeSortie ? support.dateDeSortie|date('Y-m-d') : '' }}</td>
                <td>{{ support.description }}</td>
                <td>
                    <a href="{{ path('app_support_show', {'id': support.id}) }}">show</a>
                    <a href="{{ path('app_support_edit', {'id': support.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_support_new') }}">Create new</a>
{% endblock %}
