{# template/decorator/_pagination.html.twig #}

<nav aria-label="page">
  <ul class="pagination">
    {% for p in 1..pageCount %} {# boucle de 1 Ã  pageCount #}
    <li class="page-item{% if app.request.get('p', 1) == p %} active{% endif %}">
      <a class="page-link" href="{{ path(route, app.request.get('_route_params')|merge(app.request.query.all|merge({'p': p}))) }}">{{ p }}</a>
    </li>
    {% endfor %}
  </ul>
</nav>